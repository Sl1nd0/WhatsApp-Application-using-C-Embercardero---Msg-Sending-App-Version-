void __fastcall TForm1::checkClick(TObject *Sender)
{
	TStreamReader *myFil = new TStreamReader("..\\..\\..\\conData\\convo1.txt");

	AnsiString rLine;
	ListBox1->Clear();
	while (!myFil->EndOfStream)
	{

	rLine = myFil->ReadLine();
	ListBox1->Items->Add(rLine);
	}

	myFil->Close();
}
//---------------------------------------------------------------------------

