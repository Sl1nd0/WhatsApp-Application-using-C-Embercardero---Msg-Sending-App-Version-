}
//---------------------------------------------------------------------------

AnsiString TForm1::getOneline(AnsiString temp, int fieldNr)
{

	AnsiString mLine;

	for (int i = 1; i <= fieldNr; i++) {
	   if (temp.Pos(",") > 0)
			{
			   mLine = temp.SubString(1, temp.Pos(",") - 1);
			   temp.Delete(1, temp.Pos(","));

			} else {
			   mLine = temp;
			}
	}
      return mLine;
}
